<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor_dark">
    <LinearLayout
        android:id="@+id/ly_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >



        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <!--        <TextView-->
        <!--            android:id="@+id/btn_save"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:background="?attr/selectableItemBackgroundBorderless"-->
        <!--            android:gravity="center"-->
        <!--            android:padding="8dp"-->
        <!--            android:layout_marginRight="8dp"-->
        <!--            android:text="@string/prompt.save"-->
        <!--            android:textColor="@android:color/white"-->
        <!--            />-->

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ry_adcontainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ly_toolbar"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="10dp"
        >
        <RelativeLayout
            android:id="@+id/ad_default_layout"
            android:layout_width="match_parent"
            android:layout_height="250dp"

            android:background="@android:color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="Space for ad"
                android:textColor="@android:color/black" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ly_adcontainer_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"/>
    </RelativeLayout>



    <LinearLayout
        android:id="@+id/rlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ry_adcontainer"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_15sdp"
       android:layout_marginBottom="@dimen/_15sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:elevation="2dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="@color/black_transparent"
                >
                <LinearLayout
                    android:id="@+id/mainlayoutdiscover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/btn_bg_blue">

                    <ImageView
                        android:id="@+id/icondc"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_invite"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:lines="1"
                        android:text="Discover"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="30dp"
                android:layout_weight="1"
                android:elevation="2dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="@color/black_transparent">
                <LinearLayout
                    android:id="@+id/mainlayoutquotes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:background="@drawable/btn_bg_pink"
                    android:gravity="center"

                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iconquotes"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_quote"
                        android:padding="@dimen/_5sdp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:lines="1"
                        android:text="Quotes"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="100dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:elevation="2dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardBackgroundColor="@color/black_transparent">
            <LinearLayout
                android:id="@+id/mainlayoutquotesonpic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:gravity="center"

                android:background="@drawable/btn_bg_green"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iconquotesonpic"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="@dimen/_5sdp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_text"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_centerHorizontal="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:text="Quotes on pic"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="30dp"
                android:layout_weight="1"
                android:elevation="2dp"

                app:cardElevation="2dp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardBackgroundColor="@color/black_transparent">
            <LinearLayout
                android:id="@+id/mainlayoutmycreation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:background="@drawable/btn_bg_orange"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iconmycreation"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_centerHorizontal="true"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_resize"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:text="My Creation"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>


<!--        <androidx.recyclerview.widget.RecyclerView-->
<!--            android:id="@+id/menurecyleview"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_centerInParent="true" />-->
    </LinearLayout>
</RelativeLayout>
