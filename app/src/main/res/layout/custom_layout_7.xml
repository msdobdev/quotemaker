<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10sdp">

    <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
        android:id="@+id/mainlayout_7"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        app:corner_radius="8dp">

        <RelativeLayout
            android:id="@+id/profilelayout_7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3b3b3b">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_profile_7"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_no_image_found"
                android:visibility="visible"
                app:riv_oval="false"
                app:riv_tile_mode="clamp" />

            <View
                android:id="@+id/lineview_1"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_2sdp"
                android:layout_alignBottom="@+id/iv_profile_7"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="#ffffff" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/textcircellayout_7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/profilelayout_7"
            android:background="#3b3b3b">

            <com.ms.dob.textonphoto.custom.AutoResizeTextView
                android:id="@+id/tv_quoets_7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginBottom="10dp"
                android:gravity="left|center_vertical|center_horizontal|center"
                android:text="u think, what you say, and what you do are in harmony.u think, what you say, and what you do are in harmony.u think, what you say, and what you do are in harmony.u think, what you say, and what you do are in harmony.u think, what you say, and what you do are in harmony.u think, what you say, and what you do are in harmony."
                android:textColor="#fff"
                android:textSize="@dimen/_14sdp" />
        </RelativeLayout>

        <View
            android:id="@+id/lineview_2"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_2sdp"
            android:layout_below="@+id/profilelayout_7"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="#fff" />
    </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>
</RelativeLayout>
