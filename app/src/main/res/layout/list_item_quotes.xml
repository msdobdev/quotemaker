<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/iv_selection_indicater"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/rv_main"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:scaleType="fitXY"
            android:src="@drawable/listline"
            app:tint="@color/theme_color" />

        <RelativeLayout
            android:id="@+id/rv_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_15sdp">

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/numbertext"
                android:gravity="center"
                android:text="Share your own thoughts or words with picture. Picture Quotes is the b"
                android:textColor="#454545"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/numbertext"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_dark_number"
                android:gravity="center"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textStyle="bold"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignBottom="@+id/rv_main"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:background="#d6d6d6" />
    </RelativeLayout>
</RelativeLayout>
