<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor_dark">

    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/backbutton"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_back"
            android:visibility="visible" />

<!--        <ImageView-->
<!--            android:id="@+id/refreshbtn"-->
<!--            android:layout_width="40dp"-->
<!--            android:layout_height="40dp"-->
<!--            android:layout_centerVertical="true"-->
<!--            android:layout_toLeftOf="@+id/moreoption"-->
<!--            android:padding="10dp"-->
<!--            android:src="@drawable/share"-->
<!--            android:tint="#000000"-->
<!--            android:visibility="gone" />-->

<!--        <ImageView-->
<!--            android:id="@+id/moreoption"-->
<!--            android:layout_width="40dp"-->
<!--            android:layout_height="40dp"-->
<!--            android:layout_alignParentRight="true"-->
<!--            android:layout_centerVertical="true"-->
<!--            android:src="@drawable/threedot"-->
<!--            android:tint="#000000"-->
<!--            android:visibility="gone" />-->

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_toRightOf="@+id/backbutton"
            android:ellipsize="end"
            android:lines="1"
            android:text="My Creation"
            android:textColor="#ffffff"
            android:textSize="@dimen/_16sdp"
            android:textStyle="normal" />

<!--        <View-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="2dp"-->
<!--            android:layout_alignParentBottom="true"-->
<!--            android:background="@drawable/toolbar_dropshadow"-->
<!--            android:visibility="gone" />-->
    </RelativeLayout>

    <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
        android:id="@+id/recyleviewlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_2sdp"
        android:background="#fff"
        app:top_left_corner_radius="20dp"
        app:top_right_corner_radius="20dp"
        android:layout_above="@+id/ry_adcontainer">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mycreationrecyleview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />
    </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>

    <LinearLayout
        android:id="@+id/noimageicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        >

        <ImageView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:src="@drawable/ic_no_image_found"
            android:visibility="visible" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Creation found"
            android:textColor="@color/theme_color"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/ry_adcontainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:id="@+id/ad_default_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/darker_gray">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="Space for ad"
                android:textColor="@android:color/black" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ly_adcontainer_creationlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</RelativeLayout>
