<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/dialog_bg_light">

        <TextView
            android:id="@+id/tv_quotes_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/btn_copytext"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tv_quotes_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Copy"
            android:textColor="@color/theme_color"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_sharetext"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tv_quotes_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/btn_copytext"
            android:gravity="center"
            android:text="Share"
            android:textColor="@color/theme_color"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_use"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tv_quotes_text"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/btn_copytext"
            android:gravity="center"
            android:text="Use"
            android:textColor="@color/theme_color"
            android:textSize="13dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/btn_copytext"
            android:background="#00000000" /> &gt;
    </RelativeLayout>
</RelativeLayout>
